---
import "@fontsource/geist-mono";
import "@fontsource/geist-sans";
import "@fontsource-variable/noto-emoji";
import "@fontsource/pacifico";

interface Props {
  description?: string;
  title?: string;
}

const { description, title } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />

    <title>{`${title ? `${title} -` : ""} Ball Is Wine`}</title>
    <meta
      name="description"
      content={description ||
        "A monthly blog about drinking wine to basketball"}
    />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body>
    <slot />
  </body>
</html>

<style>
  html,
  body {
    height: 100%;
  }
</style>
